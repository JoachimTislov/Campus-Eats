@page "/Admin-login"
@model AdminLoginModel
@{
    ViewData["Title"] = "Admin login page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
}

<div class="d-flex justify-content-center align-items-center">
    <div class="mt-2">
        <h1 class="mt-3"> Admin Login </h1>
        <form method="post" asp-page-handler="Login">

            @if (!string.IsNullOrEmpty(Model.ViewModel.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                    <strong> @Model.ViewModel.ErrorMessage </strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="mb-2 form-group">
                <div class="form-floating">
                    <input asp-for="ViewModel.AdminName" id="loginUsername" type="username" placeholder="username"
                        class="form-control CredsInputField" required />
                    <label for="loginUsername"> Name </label>
                </div>
                <span asp-validation-for="ViewModel.AdminName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-floating">
                    <input asp-for="ViewModel.Password" id="loginPassword" type="password" placeholder="Password"
                        class="form-control CredsInputField" required />
                    <label for="loginPassword"> Password </label>
                </div>
                <span asp-validation-for="ViewModel.Password" class="text-danger"></span>
            </div>

            <button class="SubmitButton" type="submit"> Login </button>
        </form>
    </div>
</div>